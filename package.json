{
  "name": "xide-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Xide marketplace",
  "main": "desktop-app/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["xide", "marketplace", "games", "electron"],
  "author": "Xide",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.xide.desktop",
    "productName": "Xide",
    "directories": {
      "output": "dist"
    },
    "files": [
      "desktop-app/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "desktop-app/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "desktop-app/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "desktop-app/assets/icon.png"
    }
  }
}
